<form action="/record" method="POST">
  <div>
    <label for="name" class="mb-2">名稱:</label>
    <input type="text" id="name" name="name" class="form-control" placeholder="請輸入名稱" required>
  </div>

  <div>
    <label for="date" class="mb-2">日期:</label>
    <input type="date" id="date" name="date" class="form-control" placeholder="請輸入日期" required>
  </div>

  <div>
    <label for="category" class="mb-2">類別:</label>
    <select name="category" id="category" required>
      <option value="">--請選擇類別--</option>
      <option value="家居物業">家居物業</option>
      <option value="交通出行">交通出行</option>
      <option value="休閒娛樂">休閒娛樂</option>
      <option value="餐飲食品">餐飲食品</option>
      <option value="其他">其他</option>
    </select>
  </div>

  <div>
    <label for="amount" class="mb-2">金額:</label>
    <input type="number" id="amount" name="amount" class="form-control" placeholder="請輸入金額" min="0" required>
  </div>
  
  <button type="submit">Create</button>
</form>